<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Films">


    <ScrollView
        android:layout_width="409dp"
        android:layout_height="69dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="174dp"
        android:text="Films"
        android:textColor="#FFFFFF"
        android:textSize="90px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/avatar_poster"
        android:layout_width="180dp"
        android:layout_height="242dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="16dp"
        android:onClick="filmClickedZero"
        app:layout_constraintEnd_toStartOf="@+id/black_panther_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/avatar_poster"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/black_panther_poster"
        android:layout_width="190dp"
        android:layout_height="246dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="9dp"
        android:onClick="filmClickedOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_poster"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/black_panther_2_poster" />

    <ImageView
        android:id="@+id/unwelcome_poster"
        android:layout_width="187dp"
        android:layout_height="252dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="19dp"
        android:onClick="filmClickedTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/puss_in_boots_poster"
        app:layout_constraintTop_toBottomOf="@+id/black_panther_poster"
        app:srcCompat="@drawable/unwelcome_poster" />

    <ImageView
        android:id="@+id/puss_in_boots_poster"
        android:layout_width="168dp"
        android:layout_height="251dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="21dp"
        android:onClick="filmClickedThree"
        app:layout_constraintEnd_toStartOf="@+id/unwelcome_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_poster"
        app:srcCompat="@drawable/puss_in_boots_poster"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/megan_poster"
        android:layout_width="171dp"
        android:layout_height="235dp"
        android:layout_marginBottom="1dp"
        android:onClick="filmClickedFour"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/m3gan_poster"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/fabelmans_poster"
        android:layout_width="186dp"
        android:layout_height="270dp"
        android:onClick="filmClickedFive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/the_fabelmans_poster" />


</androidx.constraintlayout.widget.ConstraintLayout>