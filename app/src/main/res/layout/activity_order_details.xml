<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetails">

    <TextView
        android:id="@+id/title_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="139dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="140dp"
        android:text="My MHC"
        android:textColor="#ffffff"
        android:textSize="90px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/email_output"
        android:layout_width="235dp"
        android:layout_height="64dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="167dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="81px"
        app:layout_constraintBottom_toTopOf="@+id/no_of_points"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_one" />

    <TextView
        android:id="@+id/no_of_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="196dp"
        android:layout_marginEnd="197dp"
        android:layout_marginBottom="41dp"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="81px"
        app:layout_constraintBottom_toTopOf="@+id/text_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="160dp"
        android:text="Points"
        android:textColor="#ffffff"
        android:textSize="81px"
        app:layout_constraintBottom_toTopOf="@+id/return_button_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/return_button_2"
        android:layout_width="241dp"
        android:layout_height="67dp"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#ff0000"
        android:onClick="ReturnMenu1"
        android:text="Go Back to Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>