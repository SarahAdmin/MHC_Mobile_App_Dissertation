<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Menu">

    <Button
        android:id="@+id/myAccount_button"
        android:layout_width="175dp"
        android:layout_height="76dp"
        android:layout_marginStart="121dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="115dp"
        android:text="My Account"
        android:onClick="myMHCprofile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/orders_button"
        android:layout_width="169dp"
        android:layout_height="78dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="118dp"
        android:text="My Orders"
        android:onClick="orderHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myAccount_button" />

    <Button
        android:id="@+id/book_a_film_button"
        android:layout_width="176dp"
        android:layout_height="77dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="108dp"
        android:text="Book a film"
        android:onClick="variousFilms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orders_button" />

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="179dp"
        android:layout_height="78dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="108dp"
        android:text="Sign Out"
        android:onClick="signedOutHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_a_film_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="42dp"
        android:text="Menu"
        android:textColor="#FFFFFF"
        android:textSize="90px"
        app:layout_constraintBottom_toTopOf="@+id/myAccount_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>