<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background='#000000'
    tools:context=".film_1_selectDateTime">

    <TextView
        android:id="@+id/film_title_1"
        android:layout_width="363dp"
        android:layout_height="113dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="24dp"
        android:text="Black Panther: Wankanda Forever"
        android:textColor='#ffffff'
        android:textSize='95px'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/avatar_view"
        android:layout_width="182dp"
        android:layout_height="249dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/film_title_1"
        app:srcCompat="@drawable/black_panther_2_poster" />

    <TextView
        android:id="@+id/avatar_description"
        android:layout_width="192dp"
        android:layout_height="214dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="11dp"
        android:text="People of Wakanda fight to protect their home from intervening
world powers as they mourn the death of King T'Challa.
Duration: 2 Hours and 41 Minutes, Rated: 12A, Genre: Action "
        android:textColor="#ffffff"
        android:textSize='40px'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_view"
        app:layout_constraintTop_toBottomOf="@+id/film_title_1" />

    <TextView
        android:id="@+id/date_title_1"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="121dp"
        android:text="Date"
        android:textColor="#ffffff"
        android:textSize="80px"
        app:layout_constraintEnd_toStartOf="@+id/child_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_view" />

    <TextView
        android:id="@+id/times_title_1"
        android:layout_width="117dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="86dp"
        android:text="Times"
        android:textColor="#ffffff"
        android:textSize="80px"
        app:layout_constraintEnd_toStartOf="@+id/student_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_title_1" />

    <Button
        android:id="@+id/back_button_2"
        android:layout_width="122dp"
        android:layout_height="57dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="51dp"
        android:layout_marginEnd="128dp"
        android:backgroundTint="#ff0000"
        android:onClick="backFilmPage1"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/next_button_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_time_1" />

    <Button
        android:id="@+id/next_button_2"
        android:layout_width="118dp"
        android:layout_height="58dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="54dp"
        android:layout_marginBottom="38dp"
        android:backgroundTint="#ff0000"
        android:onClick="seatsOne"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back_button_2"
        app:layout_constraintTop_toBottomOf="@+id/avatar_time_4" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/avatar_time_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        android:text="10:30"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/times_title_1" />

    <RadioButton
        android:id="@+id/avatar_time_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="26dp"
        android:text="13:05"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/avatar_time_1"
        app:layout_constraintTop_toBottomOf="@+id/times_title_1" />

    <RadioButton
        android:id="@+id/avatar_time_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="56dp"
        android:text="16:00"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/avatar_time_2"
        app:layout_constraintTop_toBottomOf="@+id/student_1" />

    <RadioButton
        android:id="@+id/avatar_time_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="44dp"
        android:text="18:30"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/avatar_time_3"
        app:layout_constraintTop_toBottomOf="@+id/student_quantity_1" />

    <Spinner
        android:id="@+id/adult_quantity_1"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:background='#ffffff'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar_description" />

    <Spinner
        android:id="@+id/child_quantity_1"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="24dp"
        android:background='#ffffff'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adult_quantity_1" />

    <TextView
        android:id="@+id/child_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="28dp"
        android:text="Child"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toEndOf="@+id/date_title_1"
        app:layout_constraintTop_toBottomOf="@+id/adult_1" />

    <TextView
        android:id="@+id/adult_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="121dp"
        android:layout_marginTop="58dp"
        android:text="Adult"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toEndOf="@+id/date_title_1"
        app:layout_constraintTop_toBottomOf="@+id/avatar_description" />

    <Spinner
        android:id="@+id/student_quantity_1"
        android:layout_width="66dp"
        android:layout_height="48dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="24dp"
        android:background='#ffffff'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/child_quantity_1" />

    <TextView
        android:id="@+id/student_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginTop="40dp"
        android:text="Student"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toEndOf="@+id/times_title_1"
        app:layout_constraintTop_toBottomOf="@+id/child_1" />

    <Button
        android:id="@+id/select_date_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="29dp"
        android:backgroundTint="#E91E63"
        android:onClick="chooseDateOne"
        android:text="Select"
        app:layout_constraintBottom_toTopOf="@+id/times_title_1"
        app:layout_constraintEnd_toStartOf="@+id/child_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_title_1" />

</androidx.constraintlayout.widget.ConstraintLayout>