<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".film_4_selectDateTime">

    <TextView
        android:id="@+id/megan_title"
        android:layout_width="288dp"
        android:layout_height="98dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:text="M3gan"
        android:textColor="#ffffff"
        android:textSize="90px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/megan_poster_1"
        android:layout_width="173dp"
        android:layout_height="238dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/megan_title"
        app:srcCompat="@drawable/m3gan_poster" />

    <TextView
        android:id="@+id/megan_description"
        android:layout_width="223dp"
        android:layout_height="223dp"
        android:layout_marginTop="38dp"
        android:text="Duration: 1 Hour and 42 Minutes
         Rating: 15
          Genre: Science Fiction/Horror
          A robotics engineer at the toy company builds a life-like doll
that begins to take on a life of its own."
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/megan_poster_1"
        app:layout_constraintTop_toBottomOf="@+id/megan_title" />

    <TextView
        android:id="@+id/megan_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Date"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/megan_poster_1" />

    <TextView
        android:id="@+id/megan_adult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="75dp"
        android:text="Adult"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toEndOf="@+id/megan_date"
        app:layout_constraintTop_toBottomOf="@+id/megan_description" />

    <TextView
        android:id="@+id/megan_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="117dp"
        android:layout_marginTop="63dp"
        android:text="Student"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toEndOf="@+id/select_date_button_5"
        app:layout_constraintTop_toBottomOf="@+id/megan_adult" />

    <TextView
        android:id="@+id/megan_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="96dp"
        android:text="Times"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_date_button_5" />

    <Spinner
        android:id="@+id/spinner_megan_1"
        android:layout_width="75dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="62dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/megan_adult"
        app:layout_constraintTop_toBottomOf="@+id/megan_description" />

    <Spinner
        android:id="@+id/spinner_megan_2"
        android:layout_width="78dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="31dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/megan_student"
        app:layout_constraintTop_toBottomOf="@+id/spinner_megan_1" />



    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="744dp" />

    <RadioButton
        android:id="@+id/MeganRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="26dp"
        android:text="10:55"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/megan_times" />

    <RadioButton
        android:id="@+id/MeganRadioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="328dp"
        android:text="15:00"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/MeganRadioButton"
        app:layout_constraintTop_toBottomOf="@+id/megan_poster_1" />

    <RadioButton
        android:id="@+id/MeganRadioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="143dp"
        android:text="19:30"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/MeganRadioButton2"
        app:layout_constraintTop_toBottomOf="@+id/megan_student" />

    <RadioButton
        android:id="@+id/MeganRadioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="133dp"
        android:text="23:50"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/MeganRadioButton3"
        app:layout_constraintTop_toBottomOf="@+id/spinner_megan_2" />

    <Button
        android:id="@+id/MeganButton"
        android:layout_width="106dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="149dp"
        android:backgroundTint="#ff0000"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/MeganButton2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MeganRadioButton" />

    <Button
        android:id="@+id/MeganButton2"
        android:layout_width="109dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="#ff0000"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MeganRadioButton4" />

    <Button
        android:id="@+id/select_date_button_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="117dp"
        android:backgroundTint="#E91E63"
        android:text="Select"
        app:layout_constraintEnd_toStartOf="@+id/megan_student"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/megan_date" />




</androidx.constraintlayout.widget.ConstraintLayout>