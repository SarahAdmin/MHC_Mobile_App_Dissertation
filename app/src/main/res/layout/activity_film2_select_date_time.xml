<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".film_2_selectDateTime">

    <TextView
        android:id="@+id/puss_in_boots_title"
        android:layout_width="288dp"
        android:layout_height="98dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:text="Puss in Boots: The Last Wish"
        android:textColor="#ffffff"
        android:textSize="90px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/puss_in_boots_image"
        android:layout_width="173dp"
        android:layout_height="238dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puss_in_boots_title"
        app:srcCompat="@drawable/puss_in_boots_poster" />

    <TextView
        android:id="@+id/film_description_2"
        android:layout_width="223dp"
        android:layout_height="223dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="62dp"
        android:text="Duration: 1 Hour and 40 Minutes
         Rating: PG
          Genre: Adventure
          Puss in Boots discovers that his passion for adventure has taken its toll:
Puss sets on an epic journey to find the mythical Last Wish and restore his nine lives."
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintBottom_toTopOf="@+id/spinner"
        app:layout_constraintStart_toEndOf="@+id/puss_in_boots_image"
        app:layout_constraintTop_toBottomOf="@+id/puss_in_boots_title" />

    <TextView
        android:id="@+id/puss_in_boots_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Date"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puss_in_boots_image" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="75dp"
        android:text="Adult"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toEndOf="@+id/puss_in_boots_date"
        app:layout_constraintTop_toBottomOf="@+id/film_description_2" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="58dp"
        android:text="Student"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toEndOf="@+id/select_date_button_2"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="243dp"
        android:layout_marginTop="51dp"
        android:text="Child"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="250dp"
        android:text="Times"
        android:textColor="#ffffff"
        android:textSize="60px"
        app:layout_constraintEnd_toStartOf="@+id/spinner3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_date_button_2" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="75dp"
        android:layout_height="58dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="62dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/film_description_2" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="78dp"
        android:layout_height="60dp"
        android:layout_marginTop="31dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="79dp"
        android:layout_height="56dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="27dp"
        android:background="#ffffff"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="744dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:text="10:30"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="328dp"
        android:text="12:55"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/radioButton"
        app:layout_constraintTop_toBottomOf="@+id/puss_in_boots_image" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="66dp"
        android:text="15:30"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/radioButton2"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="50dp"
        android:text="18:20"
        android:textColor="#ffffff"
        android:textSize="40px"
        app:layout_constraintStart_toEndOf="@+id/radioButton3"
        app:layout_constraintTop_toBottomOf="@+id/spinner3" />

    <Button
        android:id="@+id/button"
        android:layout_width="106dp"
        android:layout_height="59dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="#ff0000"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="109dp"
        android:layout_height="57dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="#ff0000"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioButton4" />

    <Button
        android:id="@+id/select_date_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:backgroundTint="#E91E63"
        android:text="Select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puss_in_boots_date" />


</androidx.constraintlayout.widget.ConstraintLayout>